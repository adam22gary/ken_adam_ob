<p id="notice"><%= notice %></p>

<h1>Sellers</h1>

<table>
  <thead>
    <tr>
      <th>Company Image</th>
      <th>Company name</th>
      <th>Description</th>
      <th>Location</th>
      <th>Address</th>
      <th>Website url</th>
      <th>Google reviews url</th>
      <th>Cuisine</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sellers.each do |seller| %>
      <tr>
        <td><%= image_tag seller.picture if seller.picture.attached? %></td>
        <td><%= seller.company_name %></td>
        <td><%= seller.description %></td>
        <td><%= seller.location %></td>
        <td><%= seller.address %></td>
        <td><%= seller.website_url %></td>
        <td><%= seller.google_reviews_url %></td>
        <td><%= seller.cuisine %></td>
        <td><%= seller.user %></td>
        <td><%= link_to 'Show', seller %></td>
        <td><%= link_to 'Edit', edit_seller_path(seller) %></td>
        <td><%= link_to 'Destroy', seller, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

